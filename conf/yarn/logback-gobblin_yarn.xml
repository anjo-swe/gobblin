<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <charset>UTF-8</charset>
      <pattern>%d{yyyy-MM-dd HH:mm:ss z} %-5p [%t] %C %X{job.name} %X{job.key} %X{task.key} %X{tableName} - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="org.apache.helix.controller.GenericHelixController" level="ERROR"/>
  <logger name="org.apache.helix.store.zk.AutoFallbackPropertyStore" level="ERROR"/>
  <logger name="org.apache.helix.controller.stages" level="ERROR"/>
  <logger name="org.apache.helix.controller.strategy.AutoRebalanceStrategy" level="ERROR"/>
  <logger name="org.apache.helix.manager.zk" level="ERROR"/>
  <logger name="org.apache.helix.monitoring.mbeans.ClusterStatusMonitor" level="ERROR"/>
  <root level="info">
    <appender-ref ref="stdout"/>
  </root>
</configuration>